<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="sleepAdapterXML"
            type="com.example.android.trackmysleepquality.database.SleepNight" />
        <variable
            name="clickListenerViewXML"
            type="com.example.android.trackmysleepquality.view.SleepNightListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:onClick="@{() -> clickListenerViewXML.onClick(sleepAdapterXML)}">      <!-- making whole layout clickable -->

        <ImageView
            android:id="@+id/quality_image"
            android:layout_width="60dp"
            android:layout_height="@dimen/icon_size"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.135"
            app:sleepImage="@{sleepAdapterXML}"
            app:srcCompat="@drawable/ic_sleep_5" />

        <TextView
            android:id="@+id/quality_string"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/quality_image"
            app:layout_constraintStart_toStartOf="@+id/quality_image"
            app:layout_constraintTop_toBottomOf="@+id/quality_image"
            app:layout_constraintVertical_bias="0.02"
            app:sleepQualityString="@{sleepAdapterXML}"
            tools:text="Excellent!!!" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>